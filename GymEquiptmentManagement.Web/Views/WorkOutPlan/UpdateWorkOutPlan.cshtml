@{
}

<script src="~/customscripts/workoutplan.js"></script>

<form>

    <div class="input-group">
        <label>Workout Plan Name</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="bi bi-stickies"></i></span>
            </div>
        <input class="form-control" placeholder="Workout Plan Name" id="updateWorkOutPlanName" required>
        </div>
    </div>

    <div class="input-group mt-2">
        <label>Workout Plan Description</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="bi bi-card-list"></i></span>
            </div>
            <input class="form-control" placeholder="Workout Plan Description" id="updateWorkOutPlanDescription" required>
        </div>
    </div>

    <div class="input-group mt-2">
        <label>Select Workout</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text"><i class="bi bi-soundwave"></i></label>
            </div>
            <select class="form-control select" id="updateWorkOut" onchange="PopulateWorkout()" required>
                <option value="0">Select Workout</option>
                @{
                    foreach (var items in ViewBag.Workout)
                    {
                        <option value="@items.Id">@items.WorkoutName</option>
                    }
                }
            </select>
        </div>
    </div>



    <div class="input-group mt-2">
        <label>Price</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="bi bi-cash-coin"></i></span>
            </div>
            <input type="number" class="form-control" placeholder="Price" id="updatePrice" required>
        </div>
    </div>

</form>

    <div class="mt-3" style="float:right">
        <button class="btn btn-success" onclick="UpdateWorkOutPlan()">Save</button>
        <button class="btn btn-secondary ml-2" onclick="changePath('/workoutplan')">Cancel</button>
    </div>

