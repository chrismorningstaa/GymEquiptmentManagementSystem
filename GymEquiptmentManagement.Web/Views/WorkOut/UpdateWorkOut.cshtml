<script src="~/customscripts/workout.js"></script>

<form>

    <div class="input-group">
        <label>Workout Name</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="bi bi-person-arms-up"></i></span>
            </div>
            <input class="form-control" placeholder="Workout Name" id="updateWorkOutName" required>
        </div>
    </div>

    <div class="input-group mt-2">
        <label>Workout Description</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="bi bi-card-list"></i></span>
            </div>
        <input class="form-control" placeholder="Workout Description" id="updateWorkOutDescription" required>
        </div>
    </div>

     <div class="input-group mt-2">
        <label>Select Equipment</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text"><i class="bi bi-soundwave"></i></label>
            </div>
            <select class="form-control select" id="updateEquipment" onchange="PopulateEquipment()" required>
                <option value="0">Select Equipment</option>
                @{
                    foreach (var items in ViewBag.Equipments)
                    {
                        <option value="@items.Id">@items.EquiptmentName</option>
                    }
                }
            </select>
        </div>
    </div>

</form>

    <div class="mt-3" style="float:right">
        <button class="btn btn-success" onclick="UpdateWorkOut()">Save</button>
        <button class="btn btn-secondary ml-2" onclick="changePath('/workout')">Cancel</button>
    </div>

